<Window x:Class="PointOfSale.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointOfSale"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="65"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DockPanel>
            <Button Height="50" Width="100" HorizontalAlignment="Left">Item Selection</Button>
            <Button Height="50" Width="100" HorizontalAlignment="Center">Cancel Order</Button>
            <Button Height="50" Width="100" HorizontalAlignment="Right">Complete Order</Button>

        </DockPanel>
        <local:MenuItemSelectionControl Grid.Row="1"></local:MenuItemSelectionControl>
        <local:OrderSummaryControl Grid.Row="1" Grid.Column="1"></local:OrderSummaryControl>
    </Grid>
</Window>
