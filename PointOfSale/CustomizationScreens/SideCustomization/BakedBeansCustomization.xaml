<UserControl x:Class="PointOfSale.CustomizationScreens.SideCustomization.BakedBeansCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.CustomizationScreens.SideCustomization"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock FontSize="40">Size Selection</TextBlock>
            <StackPanel Orientation="Horizontal">
                <CheckBox IsChecked="{Binding Path=Pickle}"/>
                <TextBlock Text="Pickle"/>
                <CheckBox IsChecked="{Binding Path=Bread}"/>
                <TextBlock Text="Bread"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
